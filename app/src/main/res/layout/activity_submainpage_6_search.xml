<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="탐색"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:src="@drawable/subcolorsearch"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/sequentialsearch"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/explaincolorsequentialsearch"
                    android:layout_margin="20dp"/>

                <Button
                    android:id="@+id/binarysearch"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/explaincolorbinarysearch"
                    android:layout_margin="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/redblocktree"
                    android:layout_width="166dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/explaincolorredblacktree"
                    android:layout_margin="20dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>