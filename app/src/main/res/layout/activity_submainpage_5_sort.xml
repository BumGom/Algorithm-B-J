<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="정렬"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:src="@drawable/subcolorsort"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="365dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/bubblesort"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/explaincolorbubblesort"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/insertionsort"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/explaincolorinsertionsort"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/quicksort"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/explaincolorquicksort"
                    android:layout_margin="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>